<div class="card card-boday">
    <h3>Tạo bài viết mới</h3>
    <form action="/posts" method="post">
        <div class="form-group">
            <label for="title">Tiêu đề</label>
            <input type="text"class"form-control" name="title" required value="{{title}}">
        </div>

        <div class="form-group">
            <label for="text">Nội dung</label>
            <textarea name="text" class="form-control" required>{{text}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Tạo posts mới</button>
        
    </form>
</div>